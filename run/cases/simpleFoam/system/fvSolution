FoamFile
{
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    Phi
    {
        solver                  GAMG;
        smoother                GaussSeidel;
        tolerance               1e-07;
        relTol                  0.01;
    }
    
    p
    {
        solver                  GAMG;
        smoother                GaussSeidel;
        tolerance               1e-07;
        relTol                  0.05;
    }

    "(U|k|omega)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors    3;
    consistent                  yes;
}

relaxationFactors
{
    equations
    {
        U               0.7;
        k               0.5;
        omega           0.5;
    }
}

cache
{
    grad(U);
}

potentialFlow
{
    nNonOrthogonalCorrectors 10;
}

