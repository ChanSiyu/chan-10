FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xmin -3;
xmax  5;
ymin -2;
ymax  2;
zmin -2;
zmax  2;

vertices 
(

    ($xmin  $ymin  $zmin)
    ($xmax  $ymin  $zmin)
    ($xmax  $ymax  $zmin)
    ($xmin  $ymax  $zmin)
    ($xmin  $ymin  $zmax)
    ($xmax  $ymin  $zmax)
    ($xmax  $ymax  $zmax)
    ($xmin  $ymax  $zmax)

);

blocks
(
    hex (0 1 2 3 4 5 6 7) (32 16 16) simpleGrading ( 1 1 1 )
);

boundary
(
    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (2 6 5 1)
        );
    }

    back
    {
        type patch;
        faces
        (
            (3 7 6 2)
        );
    }

    front
    {
        type patch;
        faces
        (
            (1 5 4 0)    
        );
    }

    up
    {
        type patch;
        faces
        (
            (4 5 6 7)            
        );
    }

    down
    {
        type patch;
        faces
        (
            (0 3 2 1)            
        );
    }
);

